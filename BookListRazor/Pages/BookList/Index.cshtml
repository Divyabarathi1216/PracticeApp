@page
@model BookListRazor.Pages.BookList.IndexModel

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>

    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Book</a>
        
    </div>
    <div class="col-3">
        <a asp-page="Upsert" class="btn btn-info form-control text-white">Create New Book(Add Upsert)</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.booklist.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="booklist.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.booklist.FirstOrDefault().Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.booklist.FirstOrDefault().ISBN)
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.booklist)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ISBN)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                                <a asp-page="Upsert" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit (Upsert)</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Books available.</p>
            }
        </form>
    </div>




   

